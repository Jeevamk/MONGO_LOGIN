<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>Signup Form</title>
</head>

<body>

  {{!-- {{#if errors}}
  <div>
    <p id="errMsg" data-bs-toggle="popover" data-bs-content="{{ errors.msg }}">
      {{ errors.msg }}
    </p>
  </div>
  {{/if}}
  --}}


  {{#if errors}}
  <script>
    alert('{{errors.msg}}')
  </script>
  {{/if}}



  <div class="container mt-5 shadow-lg P-5"
    style="width: 30%; background:linear-gradient(rgb(176, 176, 237),lightblue)">
    <form action="/studata" method="POST">
      <h3 style="text-align: center; font-family: cursive; font-weight: bold;" class="pt-3">SIGN UP</h3>
      <div class="mb-4">
        <input type="text" class="form-control pt-3 mt-3" id="InputName" placeholder="Enter Name" name="name">
      </div>

      <div class="mb-4">
        <input type="text" class="form-control pt-3 mt-3" id="InputEmail" placeholder="Enter Email" name="email">
      </div>

      <div class="mb-4">
        <input type="text" class="form-control pt-3 mt-3" id="Inputphone" placeholder="Enter Phone number" name="phone">
      </div>
      <p id="errMsg"></p>
      <div class="mb-4">
        <input type="password" class="form-control pt-3 mt-3" id="InputPassword1" placeholder="Create a password"
          name="password">
      </div>
      <p id="errMsg"></p>
      <div class="mb-4">
        <input type="password" class="form-control pt-3 mt-3" id="InputPassword2" placeholder="Confirm password"
          name="cpassword">
      </div>

      <div class="text-center mt-4">
        <button type="submit" class="btn btn-dark">Sign Up</button>
      </div>


    </form>

  </div>

  {{!-- {{#if alert}}
  <script>
    alert("password is not match")
  </script>
  {{/if}} --}}

